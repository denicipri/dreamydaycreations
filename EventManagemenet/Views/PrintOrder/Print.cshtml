@model EventManagemenetApp.EntityFramework.BillingModel
@{
    Layout = "~/Views/Shared/_Customer_Layout.cshtml";
}
<div class="container">


    <div id="DivIdToPrint">
        <div style="border-style: dotted;" class="col-xs-offset-0 col-xs-12" print-section>
            <h3 style="text-align:center"><span class="label label-info">Receipt</span></h3>
            <div class="form-group">
                BookingNo
                <input id="Text7" ng-readonly="true" class="form-control" value="@Model.BookingNo" name="BookingNo" type="text" />
            </div>
            <div class="form-group">
                Booking Date
                <input id="Text6" ng-readonly="true" class="form-control" value="@Model.BookingDate" name="BookingDate" type="text" />
            </div>
            <div class="form-group">
                Total Venue Cost
                <input id="VenueCost" ng-readonly="true" class="form-control" value="@Model.TotalVenueCost" name="TotalVenueCost" type="text" />
            </div>
            <div class="form-group">
                Total Equipments Cost
                <input id="Text1" ng-readonly="true" class="form-control" value="@Model.TotalEquipmentCost" name="TotalEquipmentCost" type="text" />
            </div>
            <div class="form-group">
                Total Foods Cost
                <input id="Text2" ng-readonly="true" class="form-control" value="@Model.TotalFoodCost" name="TotalFoodCost" type="text" />
            </div>
            <div class="form-group">
                Total Flowers Cost
                <input id="Text3" ng-readonly="true" class="form-control" value="@Model.TotalFlowerCost" name="TotalFlowerCost" type="text" />
            </div>
            <div class="form-group">
                Total Lightings Cost
                <input id="Text4" ng-readonly="true" class="form-control" value="@Model.TotalLightCost" name="TotalLightCost" type="text" />
            </div>
            <div class="form-group">
                Total Amount :-
                <input id="Text5" value="@Model.TotalAmount" style="background-color: #666; color: #FFF;" ng-readonly="true" class="form-control" name="TotalLightCost" type="text" />
            </div>

        </div>
    </div>
    <div print-remove class="form-group">
        <button type="button" onclick="downloadPDF()">Download PDF</button>

    </div>

    <script type="text/javascript">
        window.jsPDF = window.jspdf.jsPDF;
        var docPDF = new jsPDF();

        function downloadPDF(invoiceNo) {

            var elementHTML = document.querySelector("#DivIdToPrint");
            docPDF.html(elementHTML, {
                callback: function (docPDF) {
                    docPDF.save("invoce" + '.pdf');
                },
                x: 15,
                y: 15,
                width: 170,
                windowWidth: 650
            });
        }
    </script>

</div>



