@using EventManagemenetApp.EntityFramework
@model HomePageViewModel
@{
    Layout = "~/Views/Shared/_Customer_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}
<style>
    .container{
        background: transparent !important;
    }
    
</style>
    <!-- Hero Section Begin -->
<section class="hero-section set-bg" style="margin-top: 1%;background-image: url(&quot;/theme/img/hero.jpg&quot;);margin-bottom: 8%;" data-setbg="/theme/img/hero.jpg">

    <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="hero-text">
                    <h2>Book your special day<br /> with us</h2>
                    <a href="#" class="primary-btn" style="
    margin-bottom: 10%;
">Book Events</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->
<div class="container mt-4" style="font-weight:bold">
    <div class="col-lg-12">
        <div class="section-title">
            <h2>Our Services</h2>
        </div>
    </div>
    <p>
        Welcome to Dreamy Day Creations, where imagination meets celebration! Our passion is crafting unforgettable moments, weaving dreams into reality through meticulously curated events that leave you enchanted.

        Step into a world where every detail sparkles with magic, where your vision finds its perfect match in our dedication to crafting extraordinary experiences. From intimate gatherings to grand celebrations, we specialize in transforming your dreams into stunning realities.

        With our team of passionate creatives, we bring together artistry, innovation, and expertise to design events that mesmerize. Whether it's a fairytale wedding, a whimsical birthday bash, or a corporate affair that speaks volumes, we infuse each occasion with elegance, flair, and a touch of enchantment.

        Explore our portfolio and discover how we've turned ordinary moments into extraordinary memories. Let us be your guides on this enchanting journey, where every detail whispers elegance and every moment resonates with joy.

        Join us at Dreamy Day Creations, where dreams truly do come to life.
    </p>
        </div>
<div class="container mt-4" style="background-image:url(/theme/img/newslatter-bg.jpg) !important">
    <div class="col-lg-12">
        <div class="section-title">
      <h2>Venues</h2>
        </div>
    </div>
            <div class="row">
                @foreach (var m in Model.Venues)
                {
                    <div class="col-md-4 mb-4">

                            <div class="card">
                                <img src="/@m.VenueFilePath" class="card-img-top" width="200" height="200" alt="Product Image">
                                <div class="card-body">
                                    <h5 class="card-title">@m.VenueName</h5>
                                    <p class="card-text">$ @m.VenueCost</p>
                                </div>
                            </div>
                    </div>

                    <!-- End of Product Cards -->
                }
            </div>
        </div>
